body {
	font-size: 30px;
	font-family: text;
}

.hljs {
    max-height: 500px;
    font-size: 20px;
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
}

@font-face {
  font-family: text;
  src: url(YouTubeSansDark-Black.ttf); /* Путь к файлу со шрифтом */
}

a {
	text-decoration: underline; /* Добавляем подчеркивание */
}

.mc-c {
	color: white;
}

/* Light mode */
@media (prefers-color-scheme: light) {
    :root {
        --color-scheme-background: white;
        --color-scheme-text-color: black;
    }
		a {
			color: black; /* Цвет обычной ссылки */ 
		}		
}

/* Тёмная тема */
@media (prefers-color-scheme: dark) {
    :root {
        --color-scheme-background: black;
        --color-scheme-text-color: white;
    }
		a {
			color: white; /* Цвет обычной ссылки */ 
		}
}

/* Usage */
html {
    background: var(--color-scheme-background);
    color: var(--color-scheme-text-color);
}

a:visited {
    color: none; /* Цвет посещённой ссылки */
   } 
a:hover {
    color: red; /* Цвет ссылки при наведении на нее курсора мыши */  
   }
